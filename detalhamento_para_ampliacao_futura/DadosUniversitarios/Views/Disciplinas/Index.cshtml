@model IEnumerable<DadosUniversitarios.Models.Disciplina>

@{
    ViewData["Title"] = "Lista de Disciplinas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-4">
    <!-- Título da Página -->
    <div class="text-center mb-5">
        <h1 class="h3 font-weight-bold text-dark">Gestão de Disciplinas</h1>
        <p class="text-muted">Aqui você pode criar, editar e gerenciar as disciplinas disponíveis.</p>
    </div>

    <!-- Botões de Ações -->
    <div class="d-flex justify-content-between mb-4">
        <!-- Botão Voltar -->
        <a asp-action="Index" asp-controller="Cadastros" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>

        <!-- Botão para Novo Cadastro -->
        <a asp-action="Create" class="btn btn-sm btn-success">
            <i class="fas fa-plus"></i> Nova Disciplina
        </a>
    </div>


    <!-- Tabela de Disciplinas -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col" class="text-center" width="200px">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-edit"></i> 
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm me-2">
                                    <i class="fas fa-info-circle"></i> 
                                </a>
                                <!-- Formulário para exclusão -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('Tem certeza que deseja excluir este curso?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> 
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
