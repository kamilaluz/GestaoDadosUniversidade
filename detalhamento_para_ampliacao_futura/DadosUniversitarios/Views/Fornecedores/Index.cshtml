@model IEnumerable<DadosUniversitarios.ViewModels.ContratosViewModel>

@{
    ViewData["Title"] = "Listagem de Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="container py-4">
    <!-- Título da Página -->
    <div class="text-center mb-5">
        <h1 class="h3 font-weight-bold text-dark">Gestão de Contratos</h1>
        <p class="text-muted">Aqui você pode criar, editar e gerenciar os contratos disponíveis.</p>
    </div>

    <!-- Botões de Ações -->
    <div class="d-flex justify-content-between mb-4">
        <!-- Botão Voltar -->
        <a onclick="window.history.back()" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>

        <!-- Botão para Novo Cadastro -->
        <a asp-action="Create" class="btn btn-sm btn-success">
            <i class="fas fa-plus"></i> Novo Fornecedor
        </a>
    </div>


    <!-- Tabela de Cursos -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Serviço</th>
                        <th scope="col">Empresa</th>
                        <th scope="col">Contrato</th>
                        <th scope="col">Periodicidade</th>
                        <th scope="col">Vencimento contrato</th>                        
                        <th scope="col" class="text-center" width="350px">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Empresa.NomeServico)</td>
                            <td>@Html.DisplayFor(modelItem => item.Empresa.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Contrato.NumeroContrato)</td>
                            <td>@Html.DisplayFor(modelItem => item.Contrato.Periodicidade)</td>
                            <td>@Html.DisplayFor(modelItem => item.Contrato.VencimentoContrato)</td>                            
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Contrato.Id" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Contrato.Id" class="btn btn-outline-secondary btn-sm me-2">
                                    <i class="fas fa-info-circle"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Contrato.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Deletar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
