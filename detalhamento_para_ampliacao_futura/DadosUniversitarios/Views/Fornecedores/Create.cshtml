@model DadosUniversitarios.Models.Fornecedor

@{
    ViewData["Title"] = "Cadastrar Fornecedor";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main class="w-full h-full flex justify-center items-center">
    <div class="w-full max-w-4xl bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-center mb-6">Cadastro de Fornecedor</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <!-- Número do Contrato -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="NumeroContrato" class="block text-sm font-medium text-gray-700">Número do Contrato</label>
                    <input asp-for="NumeroContrato" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="NumeroContrato" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Periodicidade" class="block text-sm font-medium text-gray-700">Periodicidade</label>
                    <input asp-for="Periodicidade" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Periodicidade" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Valor do Serviço e Data de Pagamento -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="ValorServico" class="block text-sm font-medium text-gray-700">Valor do Serviço</label>
                    <input asp-for="ValorServico" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="ValorServico" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="DataPagamento" class="block text-sm font-medium text-gray-700">Data de Pagamento</label>
                    <input asp-for="DataPagamento" type="date" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="DataPagamento" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Vencimento do Contrato e Nome do Fornecedor -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="VencimentoContrato" class="block text-sm font-medium text-gray-700">Vencimento do Contrato</label>
                    <input asp-for="VencimentoContrato" type="date" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="VencimentoContrato" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome do Fornecedor</label>
                    <input asp-for="Nome" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- CNPJ, Email e Telefone -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div>
                    <label asp-for="CNPJ" class="block text-sm font-medium text-gray-700">CNPJ</label>
                    <input asp-for="CNPJ" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="CNPJ" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input asp-for="Email" type="email" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Telefone" class="block text-sm font-medium text-gray-700">Telefone</label>
                    <input asp-for="Telefone" type="tel" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Telefone" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Nome do Serviço -->
            <div class="mb-6">
                <label asp-for="NomeServico" class="block text-sm font-medium text-gray-700">Nome do Serviço</label>
                <input asp-for="NomeServico" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="NomeServico" class="text-red-600 text-sm"></span>
            </div>

            <!-- Botão de Submissão -->
            <div class="mb-6 text-center">
                <input type="submit" value="Cadastrar" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" />
            </div>
        </form>

        <!-- LINK PARA VOLTAR -->
        <div class="text-center mt-4">
            <button type="button" onclick="window.history.back()"
                    class="text-blue-600 hover:underline text-sm">
                Voltar para a página anterior
            </button>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
