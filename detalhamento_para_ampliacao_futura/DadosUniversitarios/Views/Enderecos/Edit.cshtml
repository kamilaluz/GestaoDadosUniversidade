@model DadosUniversitarios.Models.Endereco

@{
    ViewData["Title"] = "Editar Endereço";
}

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Card para o formulário -->
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Editar Endereço</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- Campo oculto para o ID -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Mensagem de validação -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Campo CEP -->
                        <div class="mb-3">
                            <label asp-for="Cep" class="form-label">CEP</label>
                            <input asp-for="Cep" class="form-control" />
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>

                        <!-- Campo Nome da Rua -->
                        <div class="mb-3">
                            <label asp-for="NomeRua" class="form-label">Nome da Rua</label>
                            <input asp-for="NomeRua" class="form-control" />
                            <span asp-validation-for="NomeRua" class="text-danger"></span>
                        </div>

                        <!-- Campo Número -->
                        <div class="mb-3">
                            <label asp-for="Numero" class="form-label">Número</label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>

                        <!-- Campo Bairro -->
                        <div class="mb-3">
                            <label asp-for="Bairro" class="form-label">Bairro</label>
                            <input asp-for="Bairro" class="form-control" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>

                        <!-- Campo Cidade -->
                        <div class="mb-3">
                            <label asp-for="Cidade" class="form-label">Cidade</label>
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>

                        <!-- Campo Estado -->
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
