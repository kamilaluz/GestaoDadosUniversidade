@model DadosUniversitarios.Models.Empresa

@{
    ViewData["Title"] = "Cadastrar Empresa";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main class="flex items-center justify-center h-screen bg-gray-100">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-lg p-6">
        <form asp-action="Create" class="space-y-6">
            <!-- TÍTULO -->
            <div class="text-center">
                <h1 class="font-semibold text-2xl text-gray-700">Cadastrar Empresa</h1>
                <p class="text-sm text-gray-500">Preencha os dados da empresa</p>
            </div>

            <!-- MENSAGEM DE VALIDAÇÃO -->
            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

            <!-- CAMPOS DO FORMULÁRIO -->
            <!-- Nome da Empresa -->
            <div>
                <label asp-for="Nome" class="block text-sm font-semibold text-gray-700">Nome da Empresa</label>
                <input asp-for="Nome" type="text" placeholder="Digite o nome da empresa"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
            </div>

            <!-- CNPJ -->
            <div>
                <label asp-for="CNPJ" class="block text-sm font-semibold text-gray-700">CNPJ</label>
                <input asp-for="CNPJ" type="text" placeholder="Digite o CNPJ"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <span asp-validation-for="CNPJ" class="text-red-600 text-sm"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700">Email</label>
                <input asp-for="Email" type="email" placeholder="Digite o email"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Telefone -->
            <div>
                <label asp-for="Telefone" class="block text-sm font-semibold text-gray-700">Telefone</label>
                <input asp-for="Telefone" type="tel" placeholder="Digite o telefone"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <span asp-validation-for="Telefone" class="text-red-600 text-sm"></span>
            </div>

            <!-- Nome do Serviço -->
            <div>
                <label asp-for="NomeServico" class="block text-sm font-semibold text-gray-700">Nome do Serviço</label>
                <input asp-for="NomeServico" type="text" placeholder="Digite o nome do serviço"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <span asp-validation-for="NomeServico" class="text-red-600 text-sm"></span>
            </div>

            <!-- BOTÃO DE SUBMISSÃO -->
            <div>
                <input type="submit" value="Cadastrar"
                       class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-200" />
            </div>

            <!-- LINK PARA VOLTAR -->
            <div class="text-center mt-4">
                <button type="button" onclick="window.history.back()"
                        class="text-blue-600 hover:underline text-sm">
                    Voltar para a página anterior
                </button>
            </div>
        </form>
    </div>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
