@model DadosUniversitarios.Models.Professor

@{
    ViewData["Title"] = "Create";
}

<main class="w-full h-full flex justify-center items-center">
    <div class="w-full max-w-4xl bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-center mb-6">Cadastro de Professor</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <!-- Número de Matrícula -->
            <div class="mb-6">
                <label asp-for="NumeroMatricula" class="block text-sm font-medium text-gray-700">Número de Matrícula</label>
                <input asp-for="NumeroMatricula" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="NumeroMatricula" class="text-red-600 text-sm"></span>
            </div>

            <!-- Nome do Professor -->
            <div class="mb-6">
                <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome do Professor</label>
                <input asp-for="Nome" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Nome" class="text-red-600 text-sm"></span>
            </div>

            <!-- CPF -->
            <div class="mb-6">
                <label asp-for="CPF" class="block text-sm font-medium text-gray-700">CPF</label>
                <input asp-for="CPF" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="CPF" class="text-red-600 text-sm"></span>
            </div>

            <!-- Data de Nascimento -->
            <div class="mb-6">
                <label asp-for="DataNascimento" class="block text-sm font-medium text-gray-700">Data de Nascimento</label>
                <input asp-for="DataNascimento" type="date" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="DataNascimento" class="text-red-600 text-sm"></span>
            </div>

            <!-- Email -->
            <div class="mb-6">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" type="email" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Telefone -->
            <div class="mb-6">
                <label asp-for="Telefone" class="block text-sm font-medium text-gray-700">Telefone</label>
                <input asp-for="Telefone" class="form-input mt-1 block w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Telefone" class="text-red-600 text-sm"></span>
            </div>

            <!-- Botão de Submissão -->
            <div class="mb-6 text-center">
                <input type="submit" value="Cadastrar" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" />
            </div>
        </form>

        <!-- LINK PARA VOLTAR -->
        <div class="text-center mt-4">
            <button type="button" onclick="window.history.back()"
                    class="text-blue-600 hover:underline text-sm">
                Voltar para a página anterior
            </button>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
