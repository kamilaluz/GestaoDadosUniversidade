@model DadosUniversitarios.Models.Curso

@{
    ViewData["Title"] = "Cadastrar Curso";
}

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <!-- Card para centralizar e estilizar -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h1 class="h4 mb-0">Cadastrar Curso</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <!-- MENSAGEM DE VALIDAÇÃO -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Campo oculto para Id -->
                        <input asp-for="Id" type="hidden">

                        <!-- Nome do Curso -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome do Curso</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do curso" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Botão de Enviar -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <button type="button" onclick="window.history.back()" class="btn btn-link text-decoration-none">
                        Voltar para a página anterior
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
