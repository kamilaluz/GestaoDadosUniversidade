@using DadosUniversitarios.Models
@model Usuario

@{
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<main class="w-full h-screen flex justify-center items-center bg-gray-100">
    <div class="flex w-4/5 lg:w-1/2 h-auto bg-white shadow-lg rounded-lg">
        <div class="w-full px-6 py-8">
            <!-- LINK PARA VOLTAR -->
            <div class="text-center mt-4">
                <button type="button" onclick="window.history.back()"
                        class="text-blue-600 hover:underline text-sm">
                    Voltar
                </button>
            </div>
            <!-- Formulário -->
            <form asp-action="Register" class="flex flex-col space-y-6">
                <div class="text-center">
                    <h1 class="text-2xl font-bold text-gray-800">Crie a sua conta</h1>
                    <p class="text-sm text-gray-600">Não esqueça de fazer login para aproveitar nosso site</p>
                </div>

                <!-- Campo Nome -->
                <div class="flex flex-col">
                    <label asp-for="Nome" class="text-sm font-medium text-gray-700 mb-2">Nome completo</label>
                    <div class="relative">
                        <input asp-for="Nome" type="text" placeholder="Digite seu nome completo"
                               class="w-full py-3 px-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none transition" />
                        <span asp-validation-for="Nome" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Campo Email -->
                <div class="flex flex-col">
                    <label asp-for="Email" class="text-sm font-medium text-gray-700 mb-2">E-mail</label>
                    <div class="relative">
                        <input asp-for="Email" type="email" placeholder="Digite o seu e-mail"
                               class="w-full py-3 px-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none transition" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Campo Senha -->
                <div class="flex flex-col">
                    <label asp-for="Senha" class="text-sm font-medium text-gray-700 mb-2">Senha</label>
                    <div class="relative">
                        <input asp-for="Senha" type="password" placeholder="Digite sua senha"
                               class="w-full py-3 px-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none transition" />
                        <span asp-validation-for="Senha" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Campo Confirmar Senha -->
                <div class="flex flex-col">
                    <label asp-for="ConfirmacaoSenha" class="text-sm font-medium text-gray-700 mb-2">Confirmar senha</label>
                    <div class="relative">
                        <input asp-for="ConfirmacaoSenha" type="password" placeholder="Confirme sua senha"
                               class="w-full py-3 px-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none transition" />
                        <span asp-validation-for="ConfirmacaoSenha" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Botão de registro -->
                <div>
                    <button type="submit"
                            class="w-full py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-bold transition">
                        Criar conta
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}