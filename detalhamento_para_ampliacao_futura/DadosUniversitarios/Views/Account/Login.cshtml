@model DadosUniversitarios.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="card shadow border-0" style="max-width: 420px; width: 100%;">
        <div class="card-body">
            <!-- Título -->
            <div class="text-center mb-4">
                <h1 class="h4 font-weight-bold text-dark">Bem-vindo de volta!</h1>
                <p class="text-muted mb-0">Faça login para acessar o sistema.</p>
            </div>

            <!-- Formulário -->
            <form asp-action="Login">

                <!-- Resumo de erros -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Nome de Usuário -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label text-dark font-weight-semibold">Nome</label>
                    <input asp-for="Nome" type="text" placeholder="Digite seu nome de usuário" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Senha -->
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label text-dark font-weight-semibold">Senha</label>
                    <input asp-for="Senha" type="password" placeholder="Digite sua senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>


                <!-- Botão de Login -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>

                <!-- Link para registro -->
                <div class="text-center">
                    <span class="text-muted small">Não possui uma conta?</span>
                    <a asp-action="Register" class="text-decoration-none text-primary font-weight-semibold">Registrar-se</a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
