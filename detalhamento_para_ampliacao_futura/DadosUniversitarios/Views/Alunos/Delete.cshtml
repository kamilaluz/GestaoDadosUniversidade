@model DadosUniversitarios.Models.Pessoa

@{
    ViewData["Title"] = "Excluir Aluno";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main class="w-full h-full flex justify-center items-center">
    <div class="flex w-1/2 h-3/5">
        <div class="bg-white w-1/2 h-full flex flex-col justify-center items-center p-4">
            <h1 class="font-semibold text-2xl mb-4">EXCLUIR ALUNO</h1>
            <h3 class="text-lg mb-6 text-gray-700">Tem certeza de que deseja excluir este aluno?</h3>

            <div class="w-full">
                <div class="mb-4">
                    <h4 class="text-sm font-semibold">Informações do Aluno</h4>
                    <hr class="my-2" />
                    <div class="flex flex-col mb-2">
                        <label class="font-semibold">Número de Matrícula</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.NumeroMatricula)</p>
                    </div>
                    <div class="flex flex-col mb-2">
                        <label class="font-semibold">Nome</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.Nome)</p>
                    </div>
                    <div class="flex flex-col mb-2">
                        <label class="font-semibold">CPF</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.CPF)</p>
                    </div>
                    <div class="flex flex-col mb-2">
                        <label class="font-semibold">Data de Nascimento</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.DataNascimento)</p>
                    </div>
                    <div class="flex flex-col mb-2">
                        <label class="font-semibold">Email</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.Email)</p>
                    </div>
                    <div class="flex flex-col mb-4">
                        <label class="font-semibold">Telefone</label>
                        <p class="text-gray-700">@Html.DisplayFor(model => model.Telefone)</p>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="flex justify-center gap-4">
                        <input type="submit" value="Excluir" class="bg-red-600 text-white font-semibold py-2 px-4 rounded hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-600 cursor-pointer" />
                        <a asp-action="Index" class="text-blue-600 hover:underline text-lg">Voltar para a lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
