@model DadosUniversitarios.Models.Aluno

@{
    ViewData["Title"] = "Cadastrar Aluno";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main class="flex items-center justify-center h-screen bg-gray-100">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
        <form asp-action="Create" class="space-y-6">
            <!-- TÍTULO -->
            <div class="text-center">
                <h1 class="font-semibold text-2xl text-gray-700">Cadastrar Aluno</h1>
                <p class="text-sm text-gray-500">Preencha os dados abaixo</p>
            </div>

            <!-- NÚMERO DE MATRÍCULA -->
            <div>
                <label asp-for="NumeroMatricula" class="block text-sm font-semibold text-gray-700">Número de Matrícula</label>
                <input asp-for="NumeroMatricula" type="text" placeholder="Digite o número de matrícula"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- NOME -->
            <div>
                <label asp-for="Nome" class="block text-sm font-semibold text-gray-700">Nome</label>
                <input asp-for="Nome" type="text" placeholder="Digite o nome do aluno"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- CPF -->
            <div>
                <label asp-for="CPF" class="block text-sm font-semibold text-gray-700">CPF</label>
                <input asp-for="CPF" type="text" placeholder="Digite o CPF"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- DATA DE NASCIMENTO -->
            <div>
                <label asp-for="DataNascimento" class="block text-sm font-semibold text-gray-700">Data de Nascimento</label>
                <input asp-for="DataNascimento" type="date"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- EMAIL -->
            <div>
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700">Email</label>
                <input asp-for="Email" type="email" placeholder="Digite o email"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- TELEFONE -->
            <div>
                <label asp-for="Telefone" class="block text-sm font-semibold text-gray-700">Telefone</label>
                <input asp-for="Telefone" type="text" placeholder="Digite o telefone"
                       class="w-full mt-1 px-3 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm" />
            </div>

            <!-- BOTÃO DE SUBMISSÃO -->
            <div>
                <input type="submit" value="Cadastrar"
                       class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-200" />
            </div>

            <!-- LINK PARA VOLTAR -->            
            <div class="text-center mt-4">
                <button type="button" onclick="window.history.back()"
                        class="text-blue-600 hover:underline text-sm">
                    Voltar para a página anterior
                </button>
            </div>

        </form>
    </div>
</main>

